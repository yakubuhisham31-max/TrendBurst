# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database

# Session Configuration
SESSION_SECRET=your-random-secret-key-here-min-32-chars

# Frontend URL (for CORS) - Set to your Cloudflare domain in production
FRONTEND_URL=https://yourdomain.com

# Render Configuration (automatically set by Render)
RENDER_EXTERNAL_URL=https://your-app.onrender.com

# Cookie Domain (optional - only if using cross-subdomain authentication)
# COOKIE_DOMAIN=.yourdomain.com

# Cloudflare R2 Object Storage
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET=your-bucket-name
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_BASE=https://your-bucket.your-account-id.r2.cloudflarestorage.com

# Node Environment
NODE_ENV=production
