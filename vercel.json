{
  "builds": [
    {
      "src": "client/vite.config.ts",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "client/dist/index.html" }
  ],
  "env": {
    "VITE_API_URL": "https://trendburst-backend.onrender.com"
  }
}

